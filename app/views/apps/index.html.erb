<div class="page-header">
  <h1>Listing apps</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Artwork</th>
      <th>App Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <% if app.user == current_user %>
          <td></td>
          <td><%= app.trackName %></td>
          <td><%= link_to 'Show', app, :target=>"_blank" %></td>        
          <td><%= link_to 'Refresh', edit_app_path(app) %></td>
          <td><%= link_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


