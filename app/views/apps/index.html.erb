<div class="page-header">
  <h1>Listing apps</h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Artwork</th>
      <th>App Name</th>
      <th>Page View</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @apps.each do |app| %>    
      <tr>
        <% if app.user == current_user %>
          <td><%= link_to image_tag(app.icon, :height=>"64", :width=>"64" ), app.trackViewUrl%></td>
          <td><%= app.trackName %></td>
          <td>1</td>
          <td>
            <p>
              <%= link_to 'Show', app, :target=>"_blank", :class=>"btn btn-primary" %>
              <!--
              <% link_to 'Refresh', edit_app_path(app), :class=>"btn btn-success" %>
              -->
              <%= link_to 'Delete', app, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger" %>
            </p>
          </td>
        <% else %>
          <td><%= link_to image_tag(app.icon, :height=>"64", :width=>"64" ), app.trackViewUrl%></td>
          <td><%= app.trackName %></td>
          <td><%= app.get_live_page_count %></td>
          <td>
            <%= link_to 'Show', app, :target=>"_blank", :class=>"btn btn-primary" %>
          </td>          
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<script>
$(document).ready(function(){
  mixpanel.track('Admin Page Viewed',{
    "User Email": '<% if current_user.nil?%><%else %><%= current_user.email %><%end%>', 
    'Apps Own':'<%=@apps.count %>'
  });

</script>
