<div class="page-header col-lg-12">
  <h1><%= App.find_by_id(params[:id]).trackName %> <small>stats</small></h1>
</div>
<div class="col-lg-12">
  <div id="container" style="min-width: 300px; height: 400px; margin: 0 auto"></div>
</div>
