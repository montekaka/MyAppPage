  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Page View</th>
        <th>Convert to App Store</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <% @mixpanel_live_data = @pagecounts.get_mixpanel_data([App.find_by_id(params[:id]).id.to_s])[App.find_by_id(params[:id]).id.to_s] %>
